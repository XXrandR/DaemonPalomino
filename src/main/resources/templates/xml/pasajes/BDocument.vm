<?xml version="1.0" encoding="utf-8" standalone="no"?>
<Invoice xmlns="urn:oasis:names:specification:ubl:schema:xsd:Invoice-2" xmlns:cac="urn:oasis:names:specification:ubl:schema:xsd:CommonAggregateComponents-2" xmlns:cbc="urn:oasis:names:specification:ubl:schema:xsd:CommonBasicComponents-2"
  xmlns:ds="http://www.w3.org/2000/09/xmldsig#" xmlns:ext="urn:oasis:names:specification:ubl:schema:xsd:CommonExtensionComponents-2">
	<ext:UBLExtensions>
		<ext:UBLExtension>
			<ext:ExtensionContent />
		</ext:UBLExtension>
  	</ext:UBLExtensions>
  <cbc:UBLVersionID>2.1</cbc:UBLVersionID>
  <cbc:CustomizationID>2.0</cbc:CustomizationID>
  <cbc:ID>$document.NuDocu</cbc:ID>
  <cbc:IssueDate>$document.IssueDate</cbc:IssueDate>
  <cbc:IssueTime>$document.IssueTime</cbc:IssueTime>
  <cbc:DueDate>$document.DueDate</cbc:DueDate>
  <cbc:InvoiceTypeCode listID="0101">03</cbc:InvoiceTypeCode>
  <cbc:Note languageLocaleID="1000"><![CDATA[$document.AmountInLetters]]></cbc:Note>
  <cbc:DocumentCurrencyCode>PEN</cbc:DocumentCurrencyCode>
  <cac:Signature>
    <cbc:ID>signaturePALOMINO</cbc:ID>
    <cbc:Note>PALOMINO</cbc:Note>
    <cac:SignatoryParty>
      <cac:PartyIdentification>
        <cbc:ID>$document.CompanyID</cbc:ID>
      </cac:PartyIdentification>
      <cac:PartyName>
        <cbc:Name><![CDATA[$document.CompanyName]]></cbc:Name>
      </cac:PartyName>
    </cac:SignatoryParty>
    <cac:DigitalSignatureAttachment>
      <cac:ExternalReference>
        <cbc:URI>#signaturePALOMINO</cbc:URI>
      </cac:ExternalReference>
    </cac:DigitalSignatureAttachment>
  </cac:Signature>
  <cac:AccountingSupplierParty>
    <cac:Party>
      <cac:PartyIdentification>
        <cbc:ID schemeID="6">$document.CompanyID</cbc:ID>
      </cac:PartyIdentification>
      <cac:PartyName>
        <cbc:Name><![CDATA[$document.CompanyName]]></cbc:Name>
      </cac:PartyName>
      <cac:PartyLegalEntity>
        <cbc:RegistrationName><![CDATA[$document.CompanyName]]></cbc:RegistrationName>
        <cac:RegistrationAddress>
          <cbc:ID>$document.EstablishmentUbigeo</cbc:ID>
          <cbc:AddressTypeCode>$document.EstablishmentAnnexCode</cbc:AddressTypeCode>
          <cbc:CityName>$document.EstablishmentProvinceName</cbc:CityName>
          <cbc:CountrySubentity>$document.EstablishmentDepartamentName</cbc:CountrySubentity>
          <cbc:District>$document.EstablishmentDistrictName</cbc:District>
          <cac:AddressLine>
            <cbc:Line><![CDATA[$document.EstablishmentAddress]]></cbc:Line>
          </cac:AddressLine>
          <cac:Country>
            <cbc:IdentificationCode>PE</cbc:IdentificationCode>
          </cac:Country>
        </cac:RegistrationAddress>
      </cac:PartyLegalEntity>
      <cac:Contact>
        <cbc:Telephone>.</cbc:Telephone>
        <cbc:ElectronicMail>earce@grupopalomino.com.pe</cbc:ElectronicMail>
      </cac:Contact>
    </cac:Party>
  </cac:AccountingSupplierParty>
  <cac:AccountingCustomerParty>
    <cac:Party>
      <cac:PartyIdentification>
        <cbc:ID schemeID="1">$document.CustomerId</cbc:ID>
      </cac:PartyIdentification>
      <cac:PartyLegalEntity>
        <cbc:RegistrationName><![CDATA[$document.CustomerName]]></cbc:RegistrationName>
      </cac:PartyLegalEntity>
    </cac:Party>
  </cac:AccountingCustomerParty>
	#if ($document.PaymentConditionId == "01")
		<cac:PaymentTerms>
			<cbc:ID>FormaPago</cbc:ID>
			<cbc:PaymentMeansID>Contado</cbc:PaymentMeansID>
		</cac:PaymentTerms>
	#elseif($document.PaymentConditionId == "02")
		<cac:PaymentTerms>
			<cbc:ID>FormaPago</cbc:ID>
			<cbc:PaymentMeansID>Credito</cbc:PaymentMeansID>
			<cbc:Amount currencyID="PEN">$document.PayableAmount</cbc:Amount>
		</cac:PaymentTerms>
	#end
	<cac:TaxTotal>
    <cbc:TaxAmount currencyID="PEN">$document.TaxAmount</cbc:TaxAmount>
    <cac:TaxSubtotal>
      <cbc:TaxableAmount currencyID="PEN">$document.PayableAmount</cbc:TaxableAmount>
      <cbc:TaxAmount currencyID="PEN">$document.TaxAmount</cbc:TaxAmount>
      <cac:TaxCategory>
          #if ($document.Afecto == "N")
              <cac:TaxScheme>
                <cbc:ID>9997</cbc:ID>
                <cbc:Name>EXO</cbc:Name>
                <cbc:TaxTypeCode>VAT</cbc:TaxTypeCode>
              </cac:TaxScheme>
          #else if($document.Afecto == "S")
            <cac:TaxScheme>
                <cbc:ID>1000</cbc:ID>
                <cbc:Name>IGV</cbc:Name>
                <cbc:TaxTypeCode>VAT</cbc:TaxTypeCode>
            </cac:TaxScheme>
          #end
      </cac:TaxCategory>
    </cac:TaxSubtotal>
  </cac:TaxTotal>
  <cac:LegalMonetaryTotal>
    <cbc:LineExtensionAmount currencyID="PEN">$document.PayableAmount</cbc:LineExtensionAmount>
    <cbc:TaxInclusiveAmount currencyID="PEN">$document.PayableAmount</cbc:TaxInclusiveAmount>
    <cbc:PayableAmount currencyID="PEN">$document.PayableAmount</cbc:PayableAmount>
  </cac:LegalMonetaryTotal>
  <cac:InvoiceLine>
    <cbc:ID>1</cbc:ID>
    <cbc:InvoicedQuantity unitCode="NIU">1.00</cbc:InvoicedQuantity>
    <cbc:LineExtensionAmount currencyID="PEN">$document.PayableAmount</cbc:LineExtensionAmount>
    <cac:PricingReference>
      <cac:AlternativeConditionPrice>
        <cbc:PriceAmount currencyID="PEN">$document.PayableAmount</cbc:PriceAmount>
        <cbc:PriceTypeCode>01</cbc:PriceTypeCode>
      </cac:AlternativeConditionPrice>
    </cac:PricingReference>
    <cac:TaxTotal>
      <cbc:TaxAmount currencyID="PEN">$document.TaxAmount</cbc:TaxAmount>
      <cac:TaxSubtotal>
        <cbc:TaxableAmount currencyID="PEN">$document.PayableAmount</cbc:TaxableAmount>
        <cbc:TaxAmount currencyID="PEN">$document.TaxAmount</cbc:TaxAmount>
        <cac:TaxCategory>
          #if ($document.Afecto == "N")
              <cbc:Percent>0</cbc:Percent>
              <cbc:TaxExemptionReasonCode>20</cbc:TaxExemptionReasonCode>
              <cac:TaxScheme>
                <cbc:ID>9997</cbc:ID>
                <cbc:Name>EXO</cbc:Name>
                <cbc:TaxTypeCode>VAT</cbc:TaxTypeCode>
              </cac:TaxScheme>
          #else if($document.Afecto == "S")
            <cbc:Percent>18.00</cbc:Percent>
            <cbc:TaxExemptionReasonCode>20</cbc:TaxExemptionReasonCode>
            <cac:TaxScheme>
                <cbc:ID>1000</cbc:ID>
                <cbc:Name>IGV</cbc:Name>
                <cbc:TaxTypeCode>VAT</cbc:TaxTypeCode>
            </cac:TaxScheme>
          #end
        </cac:TaxCategory>
      </cac:TaxSubtotal>
    </cac:TaxTotal>
    <cac:Item>
      <cbc:Description><![CDATA[$document.Description]]></cbc:Description>
      <cac:SellersItemIdentification>
        <cbc:ID>t001</cbc:ID>
      </cac:SellersItemIdentification>
    </cac:Item>
    <cac:Price>
      <cbc:PriceAmount currencyID="PEN">$document.PayableAmount</cbc:PriceAmount>
    </cac:Price>
  </cac:InvoiceLine>
</Invoice>
